@model Blog.Website.Core.ViewModels.Author.Tag.TagsViewModel
@{
    ViewBag.Title = "Tags";
    Layout = "_AuthorLayout";
}
<article class="content items-list-page">
    <div class="title-search-block">
        <div class="title-block">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="title">
                        Tags
                    </h3>
                </div>
            </div>
        </div>
    </div>
    <div class="card items">
        <ul class="item-list striped">
            <li class="item item-list-header hidden-sm-down">
                <div class="item-row">
                    <div class="item-col item-col-header item-col-title">
                        <div>
                            <span>Title</span>
                        </div>
                    </div>
                    <div class="item-col item-col-header item-col-stats">
                        <div class="no-overflow">
                            <span>Status</span>
                        </div>
                    </div>
                    <div class="item-col item-col-header fixed item-col-actions-dropdown"> </div>
                </div>
            </li>
            @foreach (var tag in Model.Tags)
            {
                <li class="item">
                    <div class="item-row">
                        <div class="item-col fixed pull-left item-col-title no-overflow">
                            <div class="item-heading">Title</div>
                            <div>
                                <a asp-area="author" asp-controller="Tag" asp-action="Edit" asp-route-id="@tag.Id">
                                    <h4 class="item-title" tag-id="@tag.Id"> @tag.Name </h4>
                                </a>
                            </div>
                        </div>
                        <div class="item-col item-col-stats no-overflow">
                            <div class="item-heading">Stats</div>
                            <div class="no-overflow val @(tag.IsPublished ? ("status-publish") : ("status-draft"))">
                                 @(tag.IsPublished? "Published" : "Draft")
                            </div>
                        </div>
                        <div class="item-col fixed item-col-actions-dropdown">
                            <div class="item-actions-dropdown">
                                <div data-toggle="modal" data-target="#confirm-modal" data-tag="@tag.Id" data-keyboard="true">
                                    <i class="fa fa-trash-o "></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
    <nav class="text-xs-right">
        <ul class="pagination">
            @if (Model.Page > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Tag" asp-action="Index" asp-route-page="@(Model.Page - 1)">
                        Prev
                    </a>
                </li>
            }
            @if (Model.Page < Model.TotalPageCount)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Tag" asp-action="Index" asp-route-page="@(Model.Page + 1)">
                        Next
                    </a>
                </li>
            }
        </ul>
    </nav>
</article>

@section additionalScripts{
    <script src="~/tag-index.min.js?v=@Versioning.Current"></script>
    <script>
        tagManager.initialize();
    </script>
}