@{
    var url = ViewBag.Url != null ? ViewBag.Url : "https://d2funlife.com/";
    var imageLink = ViewBag.ImageLink != null ? ViewBag.ImageLink : "https://d2funlife.com/img/hello.png";
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <title>@ViewBag.Title</title>
    <meta name="title" content="@ViewBag.Title">
    <meta name="description" content="@ViewBag.Description">
    <meta name="keywords" content="@ViewBag.Keywords">
    <meta name="author" content="Даниил Павлов">
    <meta name="copyright" content="Даниил Павлов">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    <meta property="og:type" content="article">
    <meta property="og:url" content="@url">
    <meta property="og:title" content="@ViewBag.Title">
    <meta property="og:image" content="@imageLink ">
    <link rel="image_src" href="@imageLink">
    <meta property="og:description" content="@ViewBag.Description">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@@d2funlife">
    <meta name="twitter:title" content="@ViewBag.Title">
    <meta name="twitter:description" content="@ViewBag.Description">
    <meta name="twitter:image" content="@imageLink">
    <meta name="yandex-tableau-widget" content="logo=https://d2funlife.com/img/favicons/72x72.png, color=#5c6bd0"/>
    <meta name="apple-mobile-web-app-title" content="d2funlife">
    <link rel="apple-touch-icon-precomposed" sizes="57x57" href="/img/favicons/57x57.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/img/favicons/114x114.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/img/favicons/72x72.png">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/img/favicons/144x144.png">
    <link rel="apple-touch-icon-precomposed" sizes="120x120" href="/img/favicons/120x120.png">
    <link rel="apple-touch-icon-precomposed" sizes="152x152" href="/img/favicons/152x152.png">
    <link rel="shortcut icon" type="image/x-icon" href="/img/favicon.ico">
    <link rel="icon" type="image/png" href="/img/favicons/32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/img/favicons/16x16.png" sizes="16x16">
    <meta name="msapplication-TileColor" content="#5c6bd0">
    <meta name="msapplication-TileImage" content="/img/favicons/144x144.png">
    <meta name="msvalidate.01" content="C951B123C6A25E3E148BF3ABCC25F3F9"/>
    <meta name="yandex-verification" content="61c7a513bd27c444"/>
    <meta name="theme-color" content="#5c6bd0">
    <link rel="stylesheet" href="/front.min.css?v=@Versioning.Current">
</head>
<body>
<div class="l-wrap">
    <div class="b-accent-block"></div>
    <div class="l-container">
        <div class="l-header">
            <div class="b-header">
                <div class="b-header__inner l-container__row">
                    <a href="/" class="b-header__logo">
                        <svg class="b-icon__logo ">
                            <use xlink:href="/img/sprite/sprite.svg#logo"></use>
                        </svg>
                    </a>
                    <div class="b-header__menu">
                        <svg class="b-icon__burger j-burger">
                            <use xlink:href="/img/sprite/sprite.svg#burger"></use>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
        <div class="l-main">
            @RenderBody()
        </div>
    </div>
    <div class="b-menu__wrapper">
        <div class="b-menu__wrap">
            <div class="b-menu__block-angle"></div>
            <div class="b-menu__block-inner">
                <ul class="b-menu__social">
                    <li class="b-menu__social-item">
                        <a href="https://github.com/d2funlife" target="_blank" rel="noopener">
                            <svg class="b-icon__github ">
                                <use xlink:href="/img/sprite/sprite.svg#github"></use>
                            </svg>
                        </a>
                    </li>
                    <li class="b-menu__social-item">
                        <a href="https://twitter.com/d2funlife" target="_blank" rel="noopener">
                            <svg class="b-icon__twitter ">
                                <use xlink:href="/img/sprite/sprite.svg#twitter"></use>
                            </svg>
                        </a>
                    </li>
                    <li class="b-menu__social-item">
                        <a href="https://vk.com/d2funlife" target="_blank" rel="noopener">
                            <svg class="b-icon__vk ">
                                <use xlink:href="/img/sprite/sprite.svg#vk"></use>
                            </svg>
                        </a>
                    </li>
                    <li class="b-menu__social-item">
                        <a href="https://www.linkedin.com/in/d2funlife/" target="_blank" rel="noopener">
                            <svg class="b-icon__in ">
                                <use xlink:href="/img/sprite/sprite.svg#in"></use>
                            </svg>
                        </a>
                    </li>
                </ul>
                @RenderSection("publicMainMenu", true)
            </div>
            <div class="b-menu__close j-burger-close">
                <svg class="b-icon__close b-menu__btn-close">
                    <use xlink:href="/img/sprite/sprite.svg#close"></use>
                </svg>
                <div class="b-menu__close-btn">Закрыть</div>
            </div>
        </div>
    </div>
    <div class="b-accent-block_position_bottom"></div>
    <div class="l-container b-post__footer">
        <div class="b-copy">
            <div>© Даниил Павлов 2015-2018</div>
            <div>Создано с использованием ASP.NET Core 2.0, Entity Framework Core 2.0</div>
        </div>
    </div>
    <a href="#" class="back-to-top j-btn-top">
        <svg class="b-icon__up ">
            <use xlink:href="/img/sprite/sprite.svg#up"></use>
        </svg>
    </a>
</div>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/intersection-observer@0.5.0/intersection-observer.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/lozad/dist/lozad.min.js"></script>
<script src="/front.min.js?v=@Versioning.Current"></script>
<script>var lozadObeserver = lozad();lozadObeserver.observe();</script>
@RenderSection("additionalScripts", false)
</body>
</html>