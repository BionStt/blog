@model Blog.Website.Core.ViewModels.Author.ViewComponents.MenuViewModel

<nav class="menu">
    <ul class="nav metismenu" id="sidebar-menu">
        @foreach (var link in Model.Links)
        {
            <li class="@(Model.Request.StartsWith(link.Url) ? "active" : "")">
                <a href="@link.Url"> <i class="fa @link.Icon"></i> @link.Text </a>
            </li>
        }
    </ul>
</nav>